<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
        namespace="com.cmcc.omp.omee.acs.northaccess.dao.IOmpAppinfoDao">
    <select id="getOmpAppinfoByAppid" resultType="OmpAppinfo" parameterType="java.lang.String">
		select * from omp_appinfo where appid = #{appid}
	</select>
    <update id="updateOmpAppinfo" parameterType="java.util.Map">
        update omp_appinfo
        <set>
            <if test="smsNotificationEnabled != null">
                smsNotificationEnabled = #{smsNotificationEnabled},
            </if>
            <if test="smsNotificationUrl != null">
                smsNotificationUrl = #{smsNotificationUrl},
            </if>
            <if test="subscriptionId != null">
                subscriptionId = #{subscriptionId}
            </if>
        </set>
        where
        <if test="appid != null">
            appid = #{appid}
        </if>
        <if test="searchSubscriptionId != null">
            and subscriptionId = #{searchSubscriptionId}
        </if>

    </update>

    <select id="getUpstreamInfo" parameterType="String" resultType="java.util.Map">
        select smsnotificationenabled,smsnotificationurl from omp_appinfo where appaccessno = #{appAccesNo}
    </select>

</mapper>